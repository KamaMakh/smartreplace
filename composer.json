{
  "name": "megagroup/smart_replace",
  "description": "Сервис смены контента сайта",
  "authors": [
    {
      "name": "Kamron Mahmudov",
      "email": "test@test.ru"
    }
  ],

  "autoload": {
    "psr-4": {
      "SmartReplace\\": "SmartReplace"
    }
  },

  "config": {
    "vendor-dir": "lib/vendor",
    "process-timeout": 5000
  },

  "repositories": [
    {
      "type": "git",
      "url" : "git@gitlab.oml.ru:megagroup/framework.git"
    },
    {
      "type": "git",
      "url" : "git@gitlab.oml.ru:megagroup/oauth.git"
    },
    {
      "name": "megagroup/viron-app",
      "type": "git",
      "url":  "git@gitlab.oml.ru:viron/app.git"
    },
    {
      "name": "megagroup/viron",
      "type": "git",
      "url": "git@gitlab.oml.ru:deploy/viron.git"
    }
  ],
  "minimum-stability": "dev",

  "require": {
    "php"         : ">= 5.4",
    "ext-json"    : "*",
    "ext-mbstring": "*",
    "ext-mysqli"  : "*",

    "megagroup/framework": "dev-master",
    "megagroup/oauth": "dev-master",
    "megagroup/viron-app":  "dev-master",
    "fenom/fenom": "dev-master",
    "guzzlehttp/psr7": "^1.4",
    "guzzlehttp/guzzle": "6.*",
    "sebastian/object-enumerator": "^3.0.3",
    "monolog/monolog": "^1.23",
    "pimple/pimple": "~3.0"
  },
  "require-dev": {
    "ext-curl": "*",
    "phpunit/phpunit": "^4.0 || ^5.0",
    "psr/log": "^1.0",
    "satooshi/php-coveralls": "*"
  }
}